</head>
<body>

    <div class="fh5co-loader"></div>

    <div id="page">
        <!--Nav Bar-->
        <nav class="fh5co-nav" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-xs-2">
                        <div id="fh5co-logo"><a href="#">@ViewBag.SiteName</a></div>
                    </div>
                    <div class="col-md-6 col-xs-6 text-center menu-1" id="navbar">
                        <ul>
                            <li class="has-dropdown">
                                <a href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="has-dropdown">
                                <a href="@Url.Action("Index", "Products")">Shop</a>
                            </li>
                            <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>

                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="has-dropdown">
                                    <a>Manage</a>
                                    <ul class="dropdown">
                                        <li>@Html.ActionLink("Roles", "Index", "RolesAdmin")</li>
                                        <li>@Html.ActionLink("Users", "Index", "UsersAdmin")</li>
                                        <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                                        <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                                        <li>@Html.ActionLink("JobTitles", "Index", "JobTitles")</li>
                                        <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                                        <li>@Html.ActionLink("Stores", "Index", "Stores")</li>
                                        <li>@Html.ActionLink("StockStatus", "Index", "StockStatus")</li>
                                        <li>@Html.ActionLink("PaymentMethods", "Index", "PaymentMethods")</li>
                                        <li>@Html.ActionLink("Transactions", "Index", "Transactions")</li>
                                    </ul>
                                </li>

                            }
                        </ul>

                    </div>
                    <div class="col-md-3 col-xs-4 text-right hidden-xs menu-2">
                        <ul>
                            <li class="search">
                                <div class="input-group">
                                    <input type="text" placeholder="Search..">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" type="button"><i class="icon-search"></i></button>
                                    </span>
                                </div>
                            </li>
                            <li class="shopping-cart"><a href="@Url.Action("ShoppingCart", "Home")" class="cart"><span><small>0</small><i class="icon-shopping-cart"></i></span></a></li>
                            <li> @Html.Partial("_LoginPartial")</li>
                               
                            
                        </ul>

                    </div>
                </div>

            </div>
        </nav>
        <!--End of Nav Bar-->
        <div>
            @RenderBody()
        </div>
        <!--Footer-->
        <footer id="fh5co-footer" role="contentinfo">
            <div class="container">

                <div class="row copyright">
                    <div class="col-md-12 text-center">
                        <p>
                            <small class="block">&copy; 2016 Free HTML5. All Rights Reserved.</small>
                            <small class="block">Designed by <a href="http://freehtml5.co/" target="_blank">FreeHTML5.co</a></small>
                            <small class="block">Copyright &copy; @DateTime.Now.Year Developed by Arianna Harrison </small>
                        </p>
                        <p>
                            <ul class="fh5co-social-icons">
                                <li><a href="#"><i class="icon-twitter"></i></a></li>
                                <li><a href="#"><i class="icon-facebook"></i></a></li>
                                <li><a href="#"><i class="icon-instagram"></i></a></li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
        <!--Footer-->
    </div>
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>



    <!-- jQuery -->
    <script src="~/Content/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <!-- Carousel -->
